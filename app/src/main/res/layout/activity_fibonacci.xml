<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="de.davidgollasch.emiexercise1.FibonacciActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Write an application that prints the first 30 Fibonacci numbers on screen."
            android:id="@+id/textViewFibInstructions" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Output follows here..."
            android:id="@+id/textViewFibonacci" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentBottom="true"
            android:textColor="@color/tuAkzentfarbe1BlauHell" android:layout_below="@+id/buttonFire"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fire!"
            android:id="@+id/buttonFire" android:layout_below="@+id/textViewFibInstructions"
            android:layout_centerHorizontal="true" android:layout_margin="20dp"
            android:background="@color/tuAkzentfarbe3Orange" android:textColor="#ffffff"/>
</RelativeLayout>
