<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="de.davidgollasch.emiexercise1.DigitSumActivity">

    <TextView
        android:text="Berechnet die Quersumme der angegebenen Zahl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="0dp"
        android:padding="20dp"
        android:autoText="true"
        android:clickable="false"
        tools:text="Berechnet die Quersumme der angegebenen Zahl"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="28dp"
        android:id="@+id/E_Quer"
        android:layout_centerInParent="false"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TV_Quer"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/E_Quer"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="36sp" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B_Quer"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/TV_Quer"
        android:layout_centerHorizontal="true"
        android:elevation="0dp"
        tools:text="Berechnen" />
</RelativeLayout>
