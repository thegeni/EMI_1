<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="de.davidgollasch.emiexercise1">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_tud"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:label="Task 1a: Fibonacci"
                android:name=".FibonacciActivity">
        </activity>
        <activity
                android:label="Task 1b: Fibonacci Recursive"
                android:name=".FibonacciRecursiveActivity">
        </activity>
        <activity
                android:label="Task 2: Digit Sum"
                android:name=".DigitSumActivity">
        </activity>
        <activity
                android:label="Task 3: Audio"
                android:name=".AudioPlaybackActivity">
        </activity>
    </application>

</manifest>
